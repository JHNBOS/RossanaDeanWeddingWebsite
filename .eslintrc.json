{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      "warning",
      "tab"
    ],
    "linebreak-style": [
      "warning",
      "unix"
    ],
    "quotes": [
      "warning",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "curly": [
      "warning",
      "multi"
    ],
    "object-curly-spacing": [
      "warning",
      "always",
      {
        "objectsInObjects": true,
        "arraysInObjects": false
      }
    ],
    "array-bracket-spacing": [
      "warning",
      "always"
    ],
    "block-spacing": [
      "warning",
      "always"
    ],
    "space-in-parens": [
      "warning",
      "always"
    ],
    "comma-spacing": [
      "warning",
      {
        "before": false,
        "after": true
      }
    ],
    "keyword-spacing": [
      "warning",
      {
        "before": true,
        "after": true
      }
    ],
    "brace-style": [
      "warning",
      "allman",
      {
        "allowSingleLine": true
      }
    ],
    "no-empty-function": "off",
    "@typescript-eslint/no-empty-function": "off"
  }
}
